          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.message) {
            alert(data.message);
            if (userId && data.message != 'User is not a Visitor') {
              window.location.href = `/cart/${userId}`;
            } else {
              window.location.href = `/login`;
            }
          }
        })
        .catch((error) => {
